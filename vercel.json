{
  "cleanUrls": true,
  "trailingSlash": false,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "dist/server/index.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["dist/server/**"] }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/dist/server/index.js" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
